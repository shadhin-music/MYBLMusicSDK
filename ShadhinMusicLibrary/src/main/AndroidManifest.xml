<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shadhinmusiclibrary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-sdk tools:overrideLibrary="com.google.android.exoplayer2.ext.okhttp" />
    <application
        android:name=".di.ShadhinApp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">
        <activity
            android:name=".activities.video.VideoActivity"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/videoAppTheme"

            />
        <activity
            android:name=".activities.SDKMainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/light_theme" />

        <service
            android:name=".player.ShadhinMusicPlayer"
            android:exported="false">
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
        </service>
        <provider
            android:name=".utils.MySuggestionProvider"
            android:authorities="com.shadhinmusiclibrary.utils.MySuggestionProvider"
            android:enabled="true" />
    </application>

</manifest>