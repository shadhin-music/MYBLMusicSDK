<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_playlist_details"
    app:startDestination="@id/playlist_details1">

    <fragment
        android:id="@+id/playlist_details1"
        android:name="com.shadhinmusiclibrary.fragments.PlaylistDetailsFragment"
        android:label="Playlist Details"
        tools:layout="@layout/my_bl_sdk_common_rv_pb_layout">

        <action
            android:id="@+id/to_artist_details"
            app:destination="@id/artist_details_fragment" />
        <action
            android:id="@+id/to_album_details"
            app:destination="@id/album_details_fragment" />
    </fragment>

    <fragment
        android:id="@+id/artist_details_fragment"
        android:name="com.shadhinmusiclibrary.fragments.artist.ArtistDetailsFragment"
        android:label="Artist Details"
        tools:layout="@layout/my_bl_sdk_common_rv_pb_layout">

        <action
            android:id="@+id/to_album_details"
            app:destination="@id/album_details_fragment" />
    </fragment>

    <fragment
        android:id="@+id/album_details_fragment"
        android:name="com.shadhinmusiclibrary.fragments.album.AlbumDetailsFragment"
        android:label="fragment_artist_details"
        tools:layout="@layout/my_bl_sdk_common_rv_pb_layout">
        <action
            android:id="@+id/to_artist_details"
            app:destination="@id/artist_details_fragment" />
        <action
            android:id="@+id/to_playlist_details"
            app:destination="@id/playlist_details1" />
    </fragment>

    <fragment
        android:id="@+id/playlistFavFragment"
        android:name="com.shadhinmusiclibrary.fragments.fav.PlaylistFavFragment"
        android:label="PlaylistFavFragment">
        <action
            android:id="@+id/action_playlistFavFragment_to_playlist_details1"
            app:destination="@id/playlist_details1" />
    </fragment>
</navigation>