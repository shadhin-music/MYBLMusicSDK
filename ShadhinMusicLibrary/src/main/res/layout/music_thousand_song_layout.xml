<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_thousand_song_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPink"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_thousand_song_message1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List of"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_thousand_song_message2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000+ Songs"
                android:textColor="@color/colorWhite"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/tv_thousand_song_message3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to set as you Amar Tune"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_shape"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                android:padding="10dp"
                android:text="Explore"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                app:backgroundTint="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>