<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/include_music_left_icon_parent"
        layout="@layout/music_left_icon_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/rv_music"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/include_music_right_parent_see_all"
        layout="@layout/music_right_icon_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="@id/rv_music"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/include_music_right_parent_see_all"
        tools:listitem="@layout/music_view_item" />

    <include
        android:id="@+id/include_my_turn_left_title"
        layout="@layout/music_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/rv_music"
        app:layout_constraintTop_toBottomOf="@+id/rv_music" />

    <include
        android:id="@+id/include_my_turn_right_see_all"
        layout="@layout/music_right_icon_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="@id/rv_music"
        app:layout_constraintTop_toBottomOf="@+id/rv_music" />

    <include
        android:id="@+id/include_thousand_song_layout"
        layout="@layout/music_thousand_song_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="@+id/include_my_turn_right_see_all"
        app:layout_constraintTop_toBottomOf="@+id/include_my_turn_left_title" />

    <include
        android:id="@+id/include_radio_left_title"
        layout="@layout/music_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/include_thousand_song_layout"
        app:layout_constraintTop_toBottomOf="@+id/include_thousand_song_layout" />

    <include
        android:id="@+id/include_radio_right_see_all"
        layout="@layout/music_right_icon_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@id/include_thousand_song_layout"
        app:layout_constraintTop_toBottomOf="@+id/include_thousand_song_layout" />

    <include
        android:id="@+id/include_radio_layout"
        layout="@layout/music_radio_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="@id/include_radio_right_see_all"
        app:layout_constraintStart_toStartOf="@id/include_radio_left_title"
        app:layout_constraintTop_toBottomOf="@+id/include_radio_left_title" />

    <include
        android:id="@+id/include_promotional_ads_layout"
        layout="@layout/music_promotional_ads_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/include_radio_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>