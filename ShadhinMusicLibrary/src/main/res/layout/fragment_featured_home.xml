<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLatestRelease"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:text="LatestRelease"
        android:padding="15dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFeaturedPodcast"
        app:layout_constraintTop_toBottomOf="@id/btnLatestRelease"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:padding="15dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:text="Featured Podcast"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPopularArtists"
        app:layout_constraintTop_toBottomOf="@id/btnFeaturedPodcast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:padding="15dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:text="popular artists"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMusicVideos"
        app:layout_constraintTop_toBottomOf="@id/btnPopularArtists"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:padding="15dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:text="music videos"/>
</androidx.constraintlayout.widget.ConstraintLayout>