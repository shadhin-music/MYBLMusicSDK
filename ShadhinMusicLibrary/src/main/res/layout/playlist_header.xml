<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_thumb_card"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_thumb_current_play_item"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_artist" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name_current_play_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="playlist name"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cv_thumb_card" />

    <!--    <TextView-->
    <!--        android:id="@+id/tv_description_current_play_item"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="4dp"-->
    <!--        android:gravity="center"-->
    <!--        android:paddingStart="8dp"-->
    <!--        android:paddingEnd="8dp"-->
    <!--        android:text="gghhhhhhhg"-->
    <!--        android:textColor="@color/colorBlack"-->
    <!--        android:textSize="12sp"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/tv_name_current_play_item" />-->

    <LinearLayout
        android:id="@+id/actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_current_play_item">

        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginEnd="24dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_favorite_border" />

        <ImageView
            android:id="@+id/iv_play_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_play_linear" />

        <ImageView
            android:id="@+id/iv_share_btn_fab"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:visibility="gone"
            app:srcCompat="@drawable/share" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>