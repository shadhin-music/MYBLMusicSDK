<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EFEFEF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parentRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="gone"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="@id/parentRelative">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageBack"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintBottom_toBottomOf="@id/parentRelative"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/parentRelative" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_search_download"
            android:tint="@color/colorBlack"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/parentRelative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/parentRelative" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_bar"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/parentRelative"
        >

        <SearchView
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:ems="10"
            android:background="@drawable/bg_rounded_corner"
            android:queryHint="@string/search"
            android:lines="1"
            android:queryBackground="@null"
            android:textColorHint="#757575"
            android:iconifiedByDefault="false"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/search_bar"
            app:layout_constraintBottom_toBottomOf="@+id/searchInput"
            app:layout_constraintTop_toTopOf="@+id/searchInput"
            app:srcCompat="@drawable/ic_clear_field" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_bar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvTrending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="2dp"
            android:paddingEnd="16dp"
            android:text="Weekly Trending"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTrending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvTrending"
            android:clipToPadding="false"
            android:padding="16dp" />

        <TextView
            android:id="@+id/tvTrendingVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerViewTrending"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:text="Trending Videos"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTrendingVideos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvTrendingVideo"
            android:clipToPadding="false"
            android:padding="16dp" />

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerViewTrendingVideos"
            android:padding="16dp"
            android:text="Artist"
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="bold" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewArtist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_below="@id/tvArtist"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAlbums"
            android:padding="16dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_below="@id/recyclerViewArtist"
            android:text="Albums"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAlbums"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvAlbums"
            android:visibility="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTracks"
            android:padding="16dp"
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@id/recyclerViewAlbums"
            android:text="Tracks"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTracks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_below="@id/tvTracks"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvVideos"
            android:padding="16dp"
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@id/recyclerViewTracks"
            android:text="Videos"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewVideos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_below="@id/tvVideos"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvShows"
            android:padding="16dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_below="@id/recyclerViewVideos"
            android:text="Shows"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewShows"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvShows"
            android:visibility="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvEpisodes"
            android:padding="16dp"
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@id/recyclerViewShows"
            android:text="Episode"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewEpisodes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvEpisodes"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvPodcastTracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerViewEpisodes"
            android:padding="16dp"
            android:textColor="@color/colorBlack"
            android:text="Podcast Tracks"
            android:textSize="18dp"
            android:visibility="gone"
            android:textStyle="bold" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPodcastTracks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_below="@id/tvPodcastTracks"/>

    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>