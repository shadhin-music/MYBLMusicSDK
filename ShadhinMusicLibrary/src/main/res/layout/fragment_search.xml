<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parentRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/my_sdk_color_primary"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="@id/parentRelative">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageBack"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintBottom_toBottomOf="@id/parentRelative"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/parentRelative" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_search_download"
            android:tint="@color/my_sdk_color_black"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/parentRelative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/parentRelative" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/parentRelative"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp">

        <SearchView
            android:id="@+id/sv_search_input"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_rounded_corner"
            android:ems="10"
            android:iconifiedByDefault="false"
            android:lines="1"
            android:queryBackground="@null"
            android:queryHint="@string/search"
            android:textColorHint="#757575"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/sv_search_input"
            app:layout_constraintEnd_toEndOf="@id/search_bar"
            app:layout_constraintTop_toTopOf="@+id/sv_search_input"
            app:srcCompat="@drawable/ic_clear_field" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvTrendingItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="2dp"
                android:paddingEnd="16dp"
                android:text="Trending Search"
                android:textColor="@color/my_sdk_color_black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTrendingItems"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/my_sdk_color_white"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Artist"
                        android:textColor="@color/my_sdk_color_text"
                        app:chipBackgroundColor="@color/my_sdk_color_white"
                        app:chipCornerRadius="10dp"
                        app:chipStrokeColor="#E6E5E5"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Habib Wahid"
                        android:textColor="@color/my_sdk_color_text"
                        app:chipBackgroundColor="@color/my_sdk_color_white"
                        app:chipCornerRadius="10dp"
                        app:chipStrokeColor="#E6E5E5"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Video"
                        android:textColor="@color/my_sdk_color_text"
                        app:chipBackgroundColor="@color/my_sdk_color_white"
                        app:chipCornerRadius="10dp"
                        app:chipStrokeColor="#E6E5E5"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Tahsan"
                        android:textColor="@color/my_sdk_color_text"
                        app:chipBackgroundColor="@color/my_sdk_color_white"
                        app:chipCornerRadius="10dp"
                        app:chipStrokeColor="#E6E5E5"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Kona"
                        android:textColor="@color/my_sdk_color_text"
                        app:chipBackgroundColor="@color/my_sdk_color_white"
                        app:chipCornerRadius="10dp"
                        app:chipStrokeColor="#E6E5E5"
                        app:chipStrokeWidth="1dp" />

                </com.google.android.material.chip.ChipGroup>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tvTrending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView"
                android:paddingStart="16dp"
                android:paddingTop="2dp"
                android:paddingEnd="16dp"
                android:text="Weekly Trending"
                android:textColor="@color/my_sdk_color_black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTrending"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tvTrending"
                android:clipToPadding="false"
                android:padding="16dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvTrendingVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerViewTrending"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:text="Trending Videos"
                android:textColor="@color/my_sdk_color_black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTrendingVideos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tvTrendingVideo"
                android:clipToPadding="false"
                android:padding="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerViewTrendingVideos"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                android:paddingEnd="16dp"
                android:text="Artist"
                android:textColor="@color/my_sdk_color_black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewArtist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tvArtist"
                android:clipToPadding="false"
                android:padding="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvAlbums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerViewArtist"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                android:paddingEnd="16dp"
                android:text="Albums"
                android:textColor="@color/my_sdk_color_black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAlbums"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tvAlbums"
                android:clipToPadding="false"
                android:padding="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTracks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerViewAlbums"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                android:paddingEnd="16dp"
                android:text="Tracks"
                android:textColor="@color/my_sdk_color_black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTracks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tvTracks"
                android:clipToPadding="false"
                android:padding="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvVideos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerViewTracks"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                android:paddingEnd="16dp"
                android:text="Videos"
                android:textColor="@color/my_sdk_color_black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewVideos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tvVideos"
                android:clipToPadding="false"
                android:padding="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvShows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerViewVideos"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                android:paddingEnd="16dp"
                android:text="Shows"
                android:textColor="@color/my_sdk_color_black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewShows"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tvShows"
                android:padding="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvEpisodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerViewShows"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                android:paddingEnd="16dp"

                android:text="Episode"
                android:textColor="@color/my_sdk_color_black"

                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewEpisodes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tvEpisodes"
                android:clipToPadding="false"
                android:padding="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvPodcastTracks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerViewEpisodes"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                android:paddingEnd="16dp"
                android:text="Podcast Tracks"
                android:textColor="@color/my_sdk_color_black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPodcastTracks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tvPodcastTracks"
                android:clipToPadding="false"
                android:padding="16dp"
                android:visibility="gone" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>